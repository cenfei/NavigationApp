<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:id="@+id/my_content_view">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tab_bar0"
        />


    <LinearLayout
        android:id="@+id/tab_bar0"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_alpha20"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/back_line" />


        <LinearLayout
        android:id="@+id/tab_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_alpha20"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_run"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/transition_tab_bg">
            <ImageView
                android:id="@+id/tab_run_img"

                android:layout_width="@dimen/dim_54px"
                android:layout_height="@dimen/dim_54px"
                android:src="@drawable/maintab_1_selector"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/transition_tab_bg">
            <ImageView
                android:id="@+id/tab_pay_img"

                android:layout_width="@dimen/dim_54px"
                android:layout_height="@dimen/dim_54px"
                android:src="@drawable/maintab_design_selector"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_discover"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/transition_tab_bg">
            <ImageView
                android:id="@+id/tab_discover_img"

                android:layout_width="@dimen/dim_54px"
                android:layout_height="@dimen/dim_54px"
                android:src="@drawable/maintab_shop_selector"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tab_mine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/transition_tab_bg">
            <ImageView
                android:id="@+id/tab_mine_img"

                android:layout_width="@dimen/dim_54px"
                android:layout_height="@dimen/dim_54px"
                android:src="@drawable/maintab_mine_selector"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>
