<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="80dp"

        android:layout_height="80dp">

        <com.makeramen.RoundedImageView
            android:id="@+id/job_avar_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/cartest"
            app:riv_border_color="@color/white_alpha20"
            app:riv_border_width="2dp"
            app:riv_corner_radius="30dip"
            app:riv_oval="true" />


        <TextView
            android:id="@+id/job_state_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_work_all_sheng"
            android:gravity="center"
            android:text="一审"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_alignTop="@+id/job_avar_id"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/job_address_id"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:gravity="center"
                android:text="五定路附近"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"

                android:textSize="20sp" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gps_icon" />


                <TextView
                    android:id="@+id/job_address_pro_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="上海卢湾区"
                    android:textAlignment="center"
                    android:textColor="@color/line_hot_all"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/job_take_time_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="2016.02.20 12:00:08"
                    android:textAlignment="center"
                    android:textColor="@color/line_hot_all"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:background="@color/font_titie2" />


    </RelativeLayout>


</LinearLayout>
