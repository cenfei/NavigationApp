<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:orientation="horizontal"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardid_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:gravity="center"
                android:text="中国银行"
                android:textAlignment="center"
                android:textColor="@color/black_alpha80"

                android:textSize="15sp" />
            <TextView
                android:id="@+id/cardid_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:text="卡号：82374923749327"
                android:textAlignment="center"
                android:textColor="@color/black_alpha80"

                android:textSize="12sp" />

        </LinearLayout>




        <TextView
            android:id="@+id/unbind_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"

            android:text="解绑"
            android:textSize="13sp"
            android:textColor="@color/new_blue"
            />


    </RelativeLayout>






    <View
        android:layout_width="match_parent"
        android:layout_height="1px"

        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"

        android:background="@color/new_index_btn_line_color" />
</RelativeLayout>
