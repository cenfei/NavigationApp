<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/new_index_back_color"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="245dp"

        android:background="@drawable/new_index_back">
        <include layout="@layout/index_title_main" />


        <LinearLayout
            android:id="@+id/img_info_rel"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mine_defalut_avar_id"

                android:layout_width="60dp"
                android:layout_height="49dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:layout_marginBottom="26dp"
                android:src="@drawable/new_login_logo" />

            <com.makeramen.RoundedImageView
                android:id="@+id/mine_avar_id"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:layout_marginBottom="15dp"

                android:src="@drawable/new_index_avar"
                app:riv_border_color="@color/white"
                app:riv_border_width="2dp"
                app:riv_corner_radius="30dip"
                app:riv_oval="true" />


            <TextView
                android:id="@+id/mine_name_id"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Fox"

                android:textColor="@color/white"
                android:textSize="15sp" />



        </LinearLayout>




    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_new_white_wallet"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/money_mount_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="￥0.00"
                    android:textAlignment="center"
                    android:textColor="@color/new_index_text_top_color"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="账户"
                    android:textAlignment="center"
                    android:textColor="@color/new_index_text_bt_color"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:layout_marginTop="17dp"
    android:layout_marginBottom="17dp"
    android:background="@color/new_index_text_line_color"
    />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"

            android:layout_weight="1"
           >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/video_mount_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/new_index_text_top_color"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:gravity="center"
                    android:text="视频"
                    android:textAlignment="center"
                    android:textColor="@color/new_index_text_bt_color"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:background="@color/new_index_text_line_color"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
           >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/job_mount_id"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"

                    android:textAlignment="center"
                    android:textColor="@color/new_index_text_top_color"
                    android:textSize="16sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:gravity="center"
                    android:text="工单"
                    android:textAlignment="center"
                    android:textColor="@color/new_index_text_bt_color"
                    android:textSize="15sp" />


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/index_video_info_line"
            android:layout_width="match_parent"
android:layout_marginLeft="25dp"
            android:layout_height="42dp">

            <ImageView

                android:layout_width="22dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/new_index_video" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="我的视频"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_index_jt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/new_index_btn_line_color"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/device_info_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_height="42dp">

            <ImageView

                android:layout_width="21dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:src="@drawable/new_index_device" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="我的设备"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_index_jt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/new_index_btn_line_color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/myorder_info_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_height="42dp">

            <ImageView

                android:layout_width="17dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@drawable/new_index_myorder" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="我的工单"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_index_jt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/new_index_btn_line_color"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/wz_info_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_height="42dp">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:src="@drawable/new_index_wz" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="我的违章"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_index_jt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/new_index_btn_line_color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/account_info_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_height="42dp">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/new_index_account" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="我的账户"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_index_jt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/new_index_btn_line_color"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mine_info_line"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_height="42dp">

            <ImageView

                android:layout_width="17dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/new_index_mine" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:gravity="center"
                android:text="个人中心"
                android:textAlignment="center"
                android:textColor="@color/line_hot_all"
                android:textSize="14sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_index_jt" />

    </RelativeLayout>




</LinearLayout>
