<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"

   >
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="250dp">


    <ImageView
        android:id="@+id/video_img_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
android:src="@drawable/cartest"
        android:scaleType="fitXY"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/update_web_button"
        android:layout_width="80dp"
        android:layout_height="25dp"

      android:background="@drawable/rounded_apply_upbtn_small"
        android:gravity="center"

        android:textAlignment="center"
        android:textColor="@color/up_video_button_cor"
        android:text="上传图片"
        android:textSize="13sp" />



    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/delete_web_button"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@drawable/rounded_apply_upbtn_small"
        android:gravity="center"

        android:textAlignment="center"
        android:textColor="@color/up_video_button_cor"
        android:text="删除"
        android:textSize="13sp" />



</LinearLayout>

    <TextView

        android:id="@+id/time_web_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:textColor="@color/font_titie2"
        android:text="2017-06-05 23:53:50"
        android:textSize="11sp" />

</RelativeLayout>

</RelativeLayout>
